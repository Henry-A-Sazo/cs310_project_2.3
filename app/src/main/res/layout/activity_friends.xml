<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".friends">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="28dp"
        android:gravity="center">

        <Button
            android:id="@+id/meetings_btn"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="Meetings"
            android:textSize="20sp" />

        <Button
            android:id="@+id/profile_btn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="20sp" />

        <Button
            android:id="@+id/friends_btn"
            android:layout_width="130dp"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:textSize="20sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-20dp"
        app:cardCornerRadius="28dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:orientation="vertical"
            android:padding="28dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friends"
                android:textColor="@color/main_color"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suggestions based on interests"
                android:layout_marginBottom="30dp"
                android:alpha="0.7"
                android:textStyle="bold"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alex Gomez"
                android:textStyle="bold"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/add_friend1"
                    android:layout_marginEnd="10dp"
                    android:text="Add"
                    android:textSize="20sp"
                    android:paddingBottom="5dp"/>

                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/remove_friend1"
                    android:layout_marginEnd="10dp"
                    android:text="Remove"
                    android:textSize="20sp"
                    android:paddingBottom="5dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alex Gomez"
                android:textStyle="bold"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/add_friend2"
                    android:layout_marginEnd="10dp"
                    android:text="Add"
                    android:textSize="20sp"
                    android:paddingBottom="5dp"/>

                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/remove_friend2"
                    android:layout_marginEnd="10dp"
                    android:text="Remove"
                    android:textSize="20sp"
                    android:paddingBottom="5dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alex Gomez"
                android:textStyle="bold"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/add_friend3"
                    android:layout_marginEnd="10dp"
                    android:text="Add"
                    android:textSize="20sp"
                    android:paddingBottom="5dp"/>

                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/remove_friend3"
                    android:layout_marginEnd="10dp"
                    android:text="Remove"
                    android:textSize="20sp"
                    android:paddingBottom="5dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alex Gomez"
                android:textStyle="bold"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/add_friend4"
                    android:layout_marginEnd="10dp"
                    android:text="Add"
                    android:textSize="20sp"
                    android:paddingBottom="5dp"/>

                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/remove_friend4"
                    android:layout_marginEnd="10dp"
                    android:text="Remove"
                    android:textSize="20sp"
                    android:paddingBottom="5dp"/>

            </LinearLayout>

            <Button
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/invite_fr"
                android:layout_marginBottom="20dp"
                android:text="Invite Friends"
                android:textSize="30dp"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
